# ===================================
# AI-CAPITAL ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===================================
# DATABASE
# ===================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/aicapital?retryWrites=true&w=majority
MONGODB_URI_TEST=mongodb://localhost:27017/aicapital-test

# ===================================
# REDIS (Optional - for distributed locks)
# ===================================
REDIS_URL=redis://localhost:6379

# ===================================
# SERVER
# ===================================
PORT=5000
NODE_ENV=development

# ===================================
# JWT & SESSION
# ===================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-this-too

# ===================================
# FRONTEND URL (for CORS)
# ===================================
FRONTEND_URL=http://localhost:3000

# ===================================
# ALPHA VANTAGE API KEYS (Stock Data)
# ===================================
ALPHA_VANTAGE_API_KEY_1=your_alpha_vantage_key_1
ALPHA_VANTAGE_API_KEY_2=your_alpha_vantage_key_2
ALPHA_VANTAGE_API_KEY_3=your_alpha_vantage_key_3
ALPHA_VANTAGE_API_KEY_4=your_alpha_vantage_key_4

# ===================================
# FINNHUB API KEYS (Stock Data Fallback)
# ===================================
FINNHUB_API_KEY_1=your_finnhub_key_1
FINNHUB_API_KEY_2=your_finnhub_key_2
FINNHUB_API_KEY_3=your_finnhub_key_3
FINNHUB_API_KEY_4=your_finnhub_key_4

# ===================================
# FMP API KEYS (Financial Modeling Prep)
# ===================================
FMP_API_KEY_1=your_fmp_key_1
FMP_API_KEY_2=your_fmp_key_2
FMP_API_KEY_3=your_fmp_key_3
FMP_API_KEY_4=your_fmp_key_4

# ===================================
# GOOGLE OAUTH 2.0
# ===================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ===================================
# STRIPE (Payment Processing)
# ===================================
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_STRIPE_SECRET_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
STRIPE_PREMIUM_PRICE_ID=price_1SHKPDJoluh5VDRCioKOKTOH
STRIPE_PREMIUM_PLUS_PRICE_ID=price_1SHKPnJoluh5VDRCYcSxV4jb

# ===================================
# EMAIL SERVICE (Professional Email Configuration)
# ===================================
# Email Provider: gmail, sendgrid, ses (AWS SES), or smtp (custom)
EMAIL_PROVIDER=gmail

# Professional "From" Address and Name
EMAIL_FROM=user-service@ai-capital.com
EMAIL_FROM_NAME=AiCapital

# ==== Option 1: Gmail (Development/Testing) ====
# Use your Gmail account with App Password
# Enable 2FA and create App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=user-service@ai-capital.com
EMAIL_PASSWORD=your-app-specific-password

# ==== Option 2: SendGrid (Recommended for Production) ====
# Sign up at https://sendgrid.com
# Get API key from Settings > API Keys
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==== Option 3: AWS SES (Enterprise) ====
# Set up AWS SES: https://aws.amazon.com/ses/
# AWS_SES_HOST=email-smtp.us-east-1.amazonaws.com
# AWS_SES_ACCESS_KEY=your-aws-access-key
# AWS_SES_SECRET_KEY=your-aws-secret-key

# ==== Option 4: Custom SMTP ====
# Use any SMTP provider (Mailgun, Postmark, etc.)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# ===================================
# SENTRY (Error Tracking)
# ===================================
SENTRY_DSN=https://xxxxxxxxxxxxx@xxxxxxxxxxxxx.ingest.sentry.io/xxxxxxxxxxxxx

# ===================================
# PUSH NOTIFICATIONS (VAPID Keys)
# ===================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@ai-capital.com
